<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <!-- Contenido de la tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Agrega aquí los elementos que deseas mostrar en cada tarjeta -->

        <ImageView
            android:id="@+id/imagenTarjeta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nombreTarjeta"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/anoTarjeta"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntTarjeta"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/verReviewVerPeliculaV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />

            <Button
                android:id="@+id/borarrVerPeliculaV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>


        <!-- Agrega más elementos según tus necesidades -->

    </LinearLayout>

</androidx.cardview.widget.CardView>